# Environment Variables Template
# Copy this file to .env for local development (not recommended for production)

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-openai-instance.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key-here

# For production, use Key Vault instead
KEY_VAULT_URL=https://your-keyvault.vault.azure.net/
AZURE_OPENAI_API_KEY_SECRET_NAME=azure-openai-api-key

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://your-react-app.com

# Azure Functions Runtime
FUNCTIONS_WORKER_RUNTIME=node
AzureWebJobsStorage=UseDevelopmentStorage=true
